<div class="header clearfix">
  <nav>
    <ul class="nav nav-pills pull-right">
      <li role="presentation"><%= link_to 'About', about_path %></li>
      <li role="presentation"><%= link_to 'Posts', articles_path %></li>
      <li role="presentation"><%= link_to 'Users', users_path %></li>
      <% if logged_in? %>
        <li><%= link_to 'New Article', new_article_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'All categories', categories_path %></li>
            <li role="separator" class="divider"></li>
            <% if current_user.admin? %>
              <li><%= link_to 'New category', new_category_path %></li>
            <% end %>
            <li role="separator" class="divider"></li>
            <% Category.all.each do |category| %>
              <li><%= link_to "#{category.name}", category_path(category) %></li>
            <% end %>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your <%= "admin" if current_user.admin %> profile <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit your profile', edit_user_path(current_user) %></li>
            <li><%= link_to 'View your profile', user_path(current_user) %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to 'Log out', logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li role="presentation"><%= link_to 'Log in', login_path %></li>
        <li role="presentation"><%= link_to 'Sign up', signup_path %></li>
      <% end %>
    </ul>
  </nav>
  <h3 class="text-muted"><%= link_to 'AlphaBlog', root_path, id: 'title' %></h3>
</div>
