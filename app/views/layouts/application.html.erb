<!DOCTYPE html>
<html>
<head>
  <title>AlphaBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash.count > 0 %>
  <ul>
    <%= flash.each do |name, msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>
